{
    "name": "jabranr/lassi",
    "description": "PHP boilerplate for quick projects based on Slim and Eloquent",
    "license": "MIT",
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^2.6",
        "illuminate/database": "^5.1"
    },
    "require-dev": {
        "phpunit/phpunit": "4.7.*"
    },
    "authors": [
        {
            "name": "Jabran Rafique",
            "email": "hello@jabran.me",
            "homepage": "http://jabran.me"
        }
    ],
    "autoload": {
        "psr-4": {
            "Lassi\\": ""
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lassi\\Tests\\": "tests"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"copy('.sample.env', '.dev.env');\""
        ]
    },
    "ignore": [
        "vendor",
        "test",
        "*.lock"
    ]
}
